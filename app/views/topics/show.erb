<h3>Welcome to the <%= @topic.name %> resource page!</h3>

<div class="create">
  <a href="/resources/<%= @topic.id %>/create">Add a fantastic resource for learning <%= @topic.name %>!</a><br><br>
</div>

Resources currently available:

<div class="form">
  <form action="/resources/delete/<%= @topic.id %>" method="POST">

    <% @topic.resources.each do |resource| %>
      <div class="resource">
        <div class="resource_name">
          <a href="/resources/<%=resource.id%>"><%= resource.name %></a>
        </div> <!-- .resource_name -->
        
        <div class="edit_feature">
          <% if @rights[:delete] %>
              Delete<input class="delete" type="checkbox" name="delete_resources[<%=resource.id%>]">
          <% end %>
              <br>
          <% if @rights[:edit] %>
              <a class="edit" href="/resources/edit/<%= resource.id %>">edit</a>
          <% end %>
        </div> <!-- .eadit_feature -->
      </div> <!-- .resource -->
    <% end %>

    <% if @rights[:delete] %>
      <br><br><input type="submit" value="Submit Deletions">
    <% end %>

  </form>
</div> <!-- .form -->

<br><br>

<div class="helper_links">
  <a href="/categories/<%= @topic.category_id %>"><%= @topic.category.name %> Resources</a><br>
  <a href="/categories/index">Category Index</a><br>
  <br><a href="/">Home</a>
</div>